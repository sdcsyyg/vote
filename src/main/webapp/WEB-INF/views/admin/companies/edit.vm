#set($layout = '/admin/_tags/_layout.vm')

#set($menu = "menu_company")

#set($submenu = 'submenu_company_list')
#parse("/admin/companies/_tabs.vm")

<div class="main_bd">
    <div class="panel panel-default">
        <div class="panel-heading">
            <ol class="breadcrumb">
                <li>
                    <a href="javascript:window.history.back();">
                        <i class="glyphicon glyphicon-chevron-left"></i>返回
                    </a>
                </li>
                <li class="active">修改</li>
            </ol>
        </div>
        <ul class="list-group">
            <form id="model-form" action="/admin/companies/update/$!company.id" method="post">
                <li class="list-group-item">
                    <h4>分类</h4>
                    <div class="meta_content">
                        <select id="select-cid" name="type" data-placeholder="选择分类" style="width:500px;" class="form-control chzn-select">
                            <option value="-1"></option>
                            #foreach($cat in $!categories)
                                <option value="$!cat.value" data-type="$!cat.value" #if($!company.type == $!cat.value) selected="selected" #end>$!cat.name</option>
                            #end
                        </select>
                    </div>
                    <div class="meta_opr">选择分类</div>
                </li>
                <li class="list-group-item">
                    <h4>名称</h4>
                    <div class="meta_content">
                        <input type="text" name="title" value="$!company.title" class="form-control" style="width:500px;"/>
                    </div>
                </li>
                <li class="list-group-item">
                    <h4>地址</h4>
                    <div class="meta_content">
                        <input type="text" name="addr" value="$!company.addr" class="form-control" style="width:500px;"/>
                    </div>
                </li>
                <li class="list-group-item">
                    <h4>电话</h4>
                    <div class="meta_content">
                        <input type="text" name="phone" value="$!company.phone" class="form-control" style="width:500px;"/>
                    </div>
                </li>
                <li class="list-group-item">
                    <h4>标签</h4>
                    <div class="meta_content">
                        <input name="labels" id="tags-labels" value="$!company.labels"/>
                    </div>
                </li>
                <li class="list-group-item">
                    <h4><em>*</em>图片</h4>
                    <div class="meta_content">
                        #set($thumbnails = $!company.thumbnailItems)
                        #parse('/admin/_widgets/upload_con.vm')
                        <p class="fnote">建议尺寸：600 x 300 像素，200k以内；您可以通过箭头调整图片顺序；第一张图片默认为封面图。</p>
                    </div>
                </li>
                <li class="list-group-item">
                    <h4>内容</h4>
                    <div class="meta_content">
                        <textarea class="form-control" id="editor-content" style="width:700px;">$!company.content</textarea>
                        <input type="hidden" name="content" id="editor-input">
                        <p class="fnote">建议：图片上传数量不宜超过5张，宽度在640像素以内，高度任意，大小在200k以内。</p>
                    </div>
                </li>
            </form>
        </ul>
        <div class="panel-footer">
            <button id="model-form-save" type="button" class="btn btn-success" >立即保存</button>
            <button id="model-form-reset" type="button" class="btn btn-default" >重置</button>
        </div>
    </div>
</div>
#include('/admin/_widgets/upload_view.vm')
<script src="/assets/js/admin/companies/edit.js"></script>
